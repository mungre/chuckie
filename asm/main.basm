; Macro to initialise a counted string
MACRO MSG_LENGTH
    EQUB MSG_END-MSG_START
    .MSG_START
ENDMACRO

; Macros for vdu sequences
MACRO VDU_CLG
    EQUB &10
ENDMACRO

MACRO VDU_GCOL m, c
    EQUB &12, m, c
ENDMACRO

MACRO VDU_GRAPHICS_WINDOW x1, y1, x2, y2
    EQUB &18, <x1, >x1, <y1, >y1, <x2, >x2, <y2, >y2
ENDMACRO

MACRO VDU_PLOT p, x, y
    EQUB &19, p, <x, >x, <y, >y
ENDMACRO

MACRO VDU_MOVE x, y
    VDU_PLOT 4, x, y
ENDMACRO

MACRO VDU_RESET_WINDOW
    EQUB &1A
ENDMACRO

