; Load X and Y with a 16-bit constant
MACRO LXY a
    LDX #a MOD 256
    LDY #a DIV 256
ENDMACRO

; Create an entry in sprite_lookup_table
MACRO SPRITE width, height, addr
    EQUB width, height
    EQUW addr
ENDMACRO

